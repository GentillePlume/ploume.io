{
  "name": "ploume.io",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix",
    "build-autoprefix": "postcss --use autoprefixer --map false --output style.css style.css",
    "build-cleancss": "cleancss -o style.css style.css",
    "build-clean": "rimraf css",
    "build-sass": "node-sass --output-style expanded --source-map true sass/styles.sass style.css",
    "deploy": "npm run build",
    "start": "npm run build-sass -- --watch"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^6.1.3",
    "rimraf": "^2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GentillePlume/ploume.io.git"
  },
